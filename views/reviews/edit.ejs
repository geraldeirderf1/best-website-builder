<% layout('layouts/boilerplate') %> 
  <main>
    <section id="manage">
      <div class="container" id="parent">
        <div class="jumbotron m-3">
          <h1 class="display-4">Edit Review</h1>
          <p class="lead">Edit your review below</p>
          <!-- <hr class="my-4">
          <p>It uses utility classes for typography and spacing to space content out within the larger container.</p> -->
          <a class="btn btn-primary btn-lg" href="/lists/<%= list._id %>" role="button">Cancel <i class="fas fa-angle-double-left"></i></a>
        </div>
      </div>
    </section>

    <section id="list">
      <div class="container review-page">
        <div class="list-content" id="list-record">
            <div class="row">
                <div class="list-details">
                  <div class="brand">
                    <a href="#"><img src="<% if (typeof list.logo[0] !== 'undefined') { %>
                      <%= list.logo[0].url %>
                      <% } else { %>
                      <%=''%>
                      <% } %>" alt="Wix logo"></a>
                  </div>
                  <div class="brand-info">
                    <ul>
                      <li>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <span> Please vote!</span>
                      </li>
                      <li>
                        <i class="fas fa-cog"></i>
                        <%= list.promo1.substring(0, 28) %>..
                      </li>
                      <li>
                        <i class="fas fa-cog"></i>
                        <%= list.promo2.substring(0, 28) %>..
                      </li>
                      <li>
                        <i class="fas fa-cog"></i>
                        <%= list.promo3.substring(0, 28) %>..
                      </li>
                    </ul>
                  </div>
                  <div class="brand-rating">
                    <ul>
                      <li>
                        <%= list.rating %>
                      </li>
                      <li>
                        <%= list.remark %>
                      </li>
                    </ul>
                  </div>
                  <div>
                    <a class="btn" target="_blank" href="<%= list.link %>">Visit Site <i
                        class="fas fa-angle-double-right"></i></a>
                  </div>
                  <% if (currentUser && list.author.equals(currentUser._id)) { %>
                    <div id="edit-delete-btn">
                        <a class="btn edit" href="/lists/<%= list._id %>/edit"> <i class="fas fa-edit"></i></a>
                        <form action="/lists/<%= list._id %>?_method=DELETE" method="POST">
                          <button type="submit" class="btn delete"> <i class="fas fa-trash-alt"></i></a>
                        </form>
                    </div>
                  <% } %>
                </div>
                <div class="show-more">
                  <a href="#"><i class="fas fa-angle-down"></i></a>
                </div>
              </div>
        </div> 

        <% if (currentUser) {%> 
          <div class="review-form jumbotron" id="edit-review">
            <h2 class="my-2">Edit Review</h2>
            <form id="manage-form" action="/lists/<%= list._id %>/reviews/<%= review._id %>?_method=PUT" method="POST">
              <!-- <div class="form-group">
                <label for="rating">Rating:</label>
                <input type="range" name="review[rating]" min="1" max="5" id="rating">
              </div> -->
              <div class="my-1">
                <fieldset class="starability-basic">
                  <legend class="mb-2">Rating:</legend>
                  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="<%= review.rating %> " checked aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
              </div>

              <div class="form-group">
                <label for="body">Review:</label>
                <textarea name="review[body]" id="body" cols="30" rows="3" required><%= review.body %></textarea>
              </div>
              <button type="submit" class="btn btn-block">Submit</button>
            </form>
          </div>
        <% } %> 


        <% for (let reviews of list.reviews) { %> 
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= reviews.author.username %></h5>
              <p class="starability-result" data-rating="<%= reviews.rating %>">
                Rated: <%= reviews.rating %> stars
              </p>
              <p class="card-text"><strong>Review:</strong> <%- reviews.body %></p>
              <% if (currentUser && reviews.author.equals(currentUser._id)) { %>
                <a href="#" class="btn edit">Edit <i class="fas fa-edit"></i></a>
                <form action="/lists/<%= list._id %>/reviews/<%= reviews._id %>?_method=DELETE" method="POST">
                  <button type="submit" class="btn delete">Delete <i class="fas fa-trash-alt"></i></button>
                </form>
              <% } %> 
            </div>
          </div>
        <% } %>

      </div>
    </section>
  </main>